<StackPanel x:Class="PNCreator.Modules.Rules.Panels.PanelExpender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
                                        
        <Expander Name="Expender" Grid.Column="0">       
            <StackPanel Name="ExpenderStacklPanel">                        
            
            </StackPanel>
        </Expander>      
        
        <Button Name="DeleteExpenderButton" Grid.Column="1" Height="24" VerticalAlignment="Top"
                Click="DeleteExpenderButton_OnClick">
            <StackPanel>
                <Image Name ="Red" Source="/Resources;component/Content/Images/X.png" />
                <TextBlock Name ="Black">X</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</StackPanel>
